<?xml version="1.0" ?>
<robot name="agv" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:include filename="$(find agv_description)/urdf/agv.transmission.xacro" />
  <xacro:agv_transmission prefix="" />

  <link name="odom"/>
  <link name="x_link"/>
  <joint name="x_joint" type="prismatic">
    <parent link="odom" />
    <child link="x_link" />
    <origin xyz="0.0 0 0.0" rpy="0.0 0.0 0.0" />
    <limit effort="1000.0" lower="-10" upper="10" velocity="1"/>
    <axis xyz="1 0 0"/>
  </joint>

  <link name="y_link"/>
  <joint name="y_joint" type="prismatic">
    <parent link="x_link" />
    <child link="y_link" />
    <origin xyz="0.0 0 0.0" rpy="0.0 0.0 0.0" />
    <limit effort="1000.0" lower="-10" upper="10" velocity="1"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="agv_base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <material name="agv_color">
        <color rgba="0.7255 0.7255 0.7255 1.0"/>
      </material>
      <geometry>
        <mesh filename="package://agv_description/meshes/agv_base_link.DAE" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://agv_description/meshes/agv_base_link_collision.STL" />
      </geometry>
    </collision>
  </link>

  <joint name="angle_joint" type="revolute">
    <parent link="y_link" />
    <child link="agv_base_link" />
    <origin xyz="0.0 0 0.0" rpy="0.0 0.0 0.0" />
    <limit effort="10.0" lower="${-pi/2}" upper="${pi/2}" velocity="1"/>
    <axis xyz="0 0 1"/>
  </joint>

</robot>